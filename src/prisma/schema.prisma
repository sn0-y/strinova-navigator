generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Event {
  id             Int       @id @default(autoincrement())
  name           String
  channelId      String    // The channel/thread created for this event
  status         EventStatus @default(ACTIVE)
  createdAt      DateTime  @default(now())
  
  participants   Participant[]
  winners        Winner[]
}

model Participant {
  userId         String
  eventId        Int
  submissionLink String?   // Link to their message/image
  event          Event     @relation(fields: [eventId], references: [id])

  @@id([userId, eventId]) // Composite key: A user can only join an event once
}

model Winner {
  userId         String
  eventId        Int
  inGameUid      String?   // Null until they submit it
  claimedAt      DateTime? 
  event          Event     @relation(fields: [eventId], references: [id])

  @@id([userId, eventId])
}

enum EventStatus {
  ACTIVE
  ENDED
  ARCHIVED
}